package product_test_JPA;

import static org.junit.jupiter.api.Assertions.assertNull;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import com.prac.Product;
import com.prac.ProductDao;

public class ProductTest {

    ProductDao dao;

    @BeforeEach
    public void setup() {
        dao = new ProductDao();
    }

    // ✅ Test 1: delete when product exists
    @Test
    public void deleteProduct_success() {

        // Arrange: insert a product first
        Product product = new Product();
        product.setId(100);
        product.setName("Eraser");
        product.setPrice(10);

        dao.insertProduct(product);

        // Act: delete the product
        dao.deleteProduct(100);

        // Assert: product should not exist
        Product deleted = dao.findProduct(100);
        assertNull(deleted, "Product should be deleted");
    }

    // ✅ Test 2: delete when product does NOT exist
    @Test
    public void deleteProduct_notFound() {

        // Act: delete non-existing product
        dao.deleteProduct(999);

        // Assert: no exception + product still null
        Product p = dao.findProduct(999);
        assertNull(p);
    }
}
