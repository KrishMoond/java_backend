package com.prac;

public class Employee {
	private int id;
	private String name;
	private int age;
	private String branch;
	
	Employee(int id,String name,int age, String branch){
		this.id=id;
		this.name=name;
		this.age=age;
		this.branch=branch;
	}
	
	public boolean isValidName(String name) {
//		 String r="^[A-Za-z]+(?:[ '-][A-Za-z]+)*$";
//		 return name.matches(r);
		return name.matches("[A-Za-z]+");
		                           

	}
}
